pipeline {
  agent any
  
  stages {
    stage('Run in Kubernetes') {
      steps {
        script {
          def podDefinition = """
apiVersion: v1
kind: Pod
metadata:
  name: checkov
spec:
  containers:
  - name: checkov
    image: bridgecrew/checkov:3.0.15
    command:
    - cat
    tty: true
"""
          writeFile file: 'pod-definition.yaml', text: podDefinition
          sh 'kubectl apply -f pod-definition.yaml'
        }
      }
    }
    stage('verify version') {
      steps {
        sh 'checkov --version' // Example command, replace with your actual command
      }
    }
    stage('check the help') {
      steps {
        sh 'checkov --help' // Example command, replace with your actual command
      }
    }
    stage('Clean up') {
      steps {
        sh 'kubectl delete pod checkov'
      }
    }
  }
}
