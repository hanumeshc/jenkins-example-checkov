pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  name: checkov
spec:
  containers:
  - name: checkov
    image: bridgecrew/checkov:3.0.15
    command:
    - cat
    tty: true
"""
    }
  }
  stages {
    stage('verify version') {
      steps {
        container('jnlp') {
          sh 'checkov --version'
        }
      }
    }
    stage('check the help') {
      steps {
        container('jnlp') {
          sh 'checkov --help'
        }
      }
    }
  }
}
